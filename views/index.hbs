{{#if events}}
    {{#each events}}
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img class="card-img-top" src="/images/{{mainimage}}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text">{{description}}</p>
                    <div class="dates">
                        <div class="start">
                            Organizado por: {{promoterId.name}}
                        </div>
                        <div class="start">
                            Local: {{local}}
                        </div>
                        <div class="start">
                            Data: {{startDataTime}}
                        </div>
                        <div class="start">
                            Categoria: {{category}}
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="/payments/{{_id}}/{{price}}/{{title}}/{{promoterId.name}}/{{promoterId._id}}" class="btn btn-success">Pagar Via M-Pesa</a>
                            <button type="button" class="btn btn-outline-warning">Visualizar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{/if}}

